  energie_stable BOOLEAN,
  satiete_durable BOOLEAN,
  clarte_mentale BOOLEAN,
  sensation_maitrise BOOLEAN,
  note_personnelle TEXT,
  
  -- Niveau cÃ©tose estimÃ© ce jour (optionnel)
  niveau_cetose_estime INTEGER, -- 0-100%
  
  created_at TIMESTAMP DEFAULT NOW(),
  
  -- Contrainte unicitÃ© : un seul enregistrement par jour
  UNIQUE(reprise_id, date_prevue)
);

-- Index pour performance
CREATE INDEX idx_reprises_jours_reprise ON reprises_jours_valides(reprise_id);
CREATE INDEX idx_reprises_jours_user ON reprises_jours_valides(user_id);
