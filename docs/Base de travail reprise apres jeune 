```javascript
import alimentsRepriseJeune from '../data/alimentsRepriseJeune';

export default function SaisieRepriseJeune({ phaseActuelle, jourActuel, onValidation }) {
  const [alimentChoisi, setAlimentChoisi] = useState(null);
  const [quantite, setQuantite] = useState(1);
  
  // RÃ©cupÃ©rer UNIQUEMENT les aliments de la phase actuelle
  const alimentsAutorises = alimentsRepriseJeune[`phase_${phaseActuelle}`];
  
  return (
    <div className="saisie-reprise-jeune">
      <div className="entete-phase">
        <h3>ğŸ“… Jour {jourActuel} de ta reprise</h3>
        <p>Tu es en Phase {phaseActuelle} : {getNomPhase(phaseActuelle)}</p>
      </div>
      
      {/* Liste des aliments AUTORISÃ‰S uniquement */}
      <div className="aliments-autorises">
        <h4>ğŸ½ï¸ Aliments autorisÃ©s aujourd'hui :</h4>
        {alimentsAutorises.map(aliment => (
          <div 
            key={aliment.nom}
            className={`carte-aliment ${alimentChoisi?.nom === aliment.nom ? 'selectionne' : ''}`}
            onClick={() => setAlimentChoisi(aliment)}
          >
            <div className="nom-aliment">{aliment.nom}</div>
            <div className="portion">{aliment.portion} = {aliment.kcal} kcal</div>
            <div className="conseil">ğŸ’¡ {aliment.conseil}</div>
          </div>
        ))}
      </div>
      
      {/* Validation avec message d'engagement */}
      {alimentChoisi && (
        <div className="validation-reprise">
          <label>QuantitÃ© consommÃ©e :</label>
          <input 
            type="number" 
            value={quantite} 
            onChange={(e) => setQuantite(e.target.value)}
            step="0.5"
            min="0.5"
          />
          
          <button onClick={() => onValidation(alimentChoisi, quantite)}>
            âœ… Valider ce repas de reprise
          </button>
          
          <div className="message-engagement">
            ğŸ”’ Tu respectes ton programme. Tu tiens parole.
          </div>
        </div>
      )}
      
      {/* Aliments INTERDITS aujourd'hui (pour rappel) */}
      <details className="aliments-interdits">
        <summary>âš ï¸ Aliments INTERDITS en Phase {phaseActuelle}</summary>
        <ul>
          {getAlimentsInterdits(phaseActuelle).map(aliment => (
            <li key={aliment}>âŒ {aliment}</li>
          ))}
        </ul>
      </details>
    </div>
  );
}
```

