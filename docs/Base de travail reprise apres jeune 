-- Table principale : reprises_alimentaires (Ã©quivalent de "ideaux")
CREATE TABLE reprises_alimentaires (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
  user_id UUID REFERENCES auth.users(id) NOT NULL,
  jeune_id UUID REFERENCES jeunes(id), -- Lien vers le jeÃ»ne qui a dÃ©clenchÃ© cette reprise
  
  -- DonnÃ©es du jeÃ»ne terminÃ©
  duree_jeune INTEGER NOT NULL, -- 3, 5, 7, 10, 14 jours
  poids_depart NUMERIC(5,2),
  poids_fin NUMERIC(5,2),
  date_fin_jeune DATE NOT NULL,
  
  -- Programme de reprise gÃ©nÃ©rÃ©
  duree_reprise INTEGER NOT NULL, -- CalculÃ©: 2Ã— duree_jeune
  date_debut_reprise DATE NOT NULL,
  date_fin_prevue DATE NOT NULL,
  programme_json JSONB NOT NULL, -- Sortie de genererProgrammeReprise()
  
  -- ParamÃ¨tres personnalisables (AVANT validation)
  vitesse_transition VARCHAR(20) DEFAULT 'stricte', -- 'stricte' | 'souple'
  maintien_cetose BOOLEAN DEFAULT true,
  
  -- Ã‰tat de validation
  statut VARCHAR(20) DEFAULT 'brouillon', -- 'brouillon' | 'en_cours' | 'termine' | 'abandonne'
  engagement_date TIMESTAMP, -- Date de validation du programme (figement)
  date_fin_reelle DATE, -- Date rÃ©elle de fin (peut diffÃ©rer de date_fin_prevue)
  
  -- ParamÃ¨tres figÃ©s aprÃ¨s validation (Ã©quivalent de plan_params_valides dans ideaux)
  reprise_params_valides JSONB, -- {dureeJeune, dureeReprise, vitesseTransition, maintienCetose, dateDebut}
  
  created_at TIMESTAMP DEFAULT NOW(),
  updated_at TIMESTAMP DEFAULT NOW()
);

-- Index pour performance
CREATE INDEX idx_reprises_user ON reprises_alimentaires(user_id);
CREATE INDEX idx_reprises_statut ON reprises_alimentaires(statut);
CREATE INDEX idx_reprises_jeune ON reprises_alimentaires(jeune_id);

-- Table de suivi quotidien : reprises_jours_valides (Ã©quivalent de "seances_reelles")
CREATE TABLE reprises_jours_valides (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
