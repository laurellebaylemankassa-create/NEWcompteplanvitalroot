  const jours = [];
  let dateActuelle = new Date(dateFin);
  dateActuelle.setDate(dateActuelle.getDate() + 1); // J+1 aprÃ¨s fin jeÃ»ne
  
  phases.forEach(phase => {
    for (let j = phase.joursDebut; j <= phase.joursFin; j++) {
      jours.push({
        numero: j,
        date: dateActuelle.toISOString().slice(0, 10),
        phase: phase.nom,
        phaseNumero: phase.numero,
        objectif: phase.objectif,
        
        // Aliments autorisÃ©s ce jour (filtrÃ©s par phase)
        alimentsAutorises: getAlimentsPhase(phase.numero, options.maintienCetose),
        
        // RÃ¨gles strictes du jour
        interdits: phase.interdits,
        
        // Messages spirituels + physiques
        messagePhysique: phase.messagePhysique,
        messageSpirituel: phase.messageSpirituel,
        messageMotivation: phase.messageMotivation,
        
        // Parole inspirante
        paroleJour: phase.paroleJour,
        citations: phase.citations,
        
        // Ã‰tat validation
        valide: false,
        dateValidation: null
      });
      
      dateActuelle.setDate(dateActuelle.getDate() + 1);
    }
  });
  
  // 4. STRUCTURE FINALE (similaire Ã  ideaux.js)
  return {
    // MÃ©tadonnÃ©es
    jeune: {
      duree: dureeJeune,
      poidsDepart,
      dateFin,
      poidsFin: null // Ã€ renseigner au dÃ©but reprise
    },
    
    // Programme de reprise
    reprise: {
      dureeJours: dureeReprise,
      dateDebut: jours[0].date,
      dateFin: jours[jours.length - 1].date,
      options: {
        vitesseTransition: options.vitesseTransition || 'stricte',
        maintienCetose: options.maintienCetose !== false
      }
    },
    
    // Phases structurÃ©es
    phases: phases.map(p => ({
      numero: p.numero,
      nom: p.nom,
      joursDebut: p.joursDebut,
      joursFin: p.joursFin,
      objectif: p.objectif,
      alimentsTypes: p.alimentsTypes,
      interdits: p.interdits
    })),
    
    // Jours dÃ©taillÃ©s (Ã©quivalent des semaines dans ideaux)
    jours: jours,
    
    // RÃ¨gles globales
    reglesGlobales: [
      "âŒ Aucun sucre raffinÃ© pendant toute la reprise",
      "âŒ Aucun fÃ©culent le soir",
      "âŒ Aucun extra (fast-food, alcool, produits transformÃ©s)",
      "âœ… 2 litres d'eau par jour minimum",
      "âœ… Validation quotidienne obligatoire"
    ],
    
    // Statistiques
    stats: {
      nbJoursTotal: jours.length,
      nbJoursValides: 0,
      nbPhases: phases.length,
      progressionPct: 0
    }
  };
}

// === FONCTIONS HELPERS ===

function calculerDureeReprise(dureeJeune) {
  const mapping = {
    3: 5,
    5: 8,
    7: 12,
    10: 14,
    14: 28,
    16: 28
  };
  return mapping[dureeJeune] || Math.ceil(dureeJeune * 2);
}

function decouper EnPhases(dureeReprise) {
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // ğŸ”¬ POURQUOI 4 PHASES ? EXPLICATION SCIENTIFIQUE ET MÃ‰DICALE
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  
  // Source : "Complement info page jeune" lignes 183-209 + recommandations mÃ©dicales
  
  // PHASE 1 : RÃ‰VEIL DIGESTIF (liquides uniquement)
  // Pourquoi ? AprÃ¨s un jeÃ»ne, le systÃ¨me digestif est en "mode veille".
  // Les enzymes digestives sont rÃ©duites, la flore intestinale est modifiÃ©e.
  // â¡ï¸ Commencer par des LIQUIDES Ã©vite le choc mÃ©tabolique et rÃ©veille doucement l'intestin.
  // Risque si on saute cette phase : Syndrome de renutrition (dangereux, voire mortel)
  
  // PHASE 2 : INTRODUCTION FIBRES (lÃ©gumes cuits + soupes)
  // Pourquoi ? Une fois le systÃ¨me digestif rÃ©veillÃ©, on rÃ©introduit des fibres DOUCES.
  // Les lÃ©gumes cuits vapeur sont faciles Ã  digÃ©rer et rÃ©activent le transit.
  // â¡ï¸ On Ã©vite encore les fibres CRUES (trop agressives) et les fÃ©culents (trop lourds).
  
  // PHASE 3 : PROTÃ‰INES & GRAISSES (Å“ufs, avocats, huiles)
  // Pourquoi ? Le corps a besoin de reconstruire (autophagie = recyclage cellulaire).
  // Les protÃ©ines complÃ¨tes + bonnes graisses fournissent les "briques" sans casser la cÃ©tose.
  // â¡ï¸ On maintient encore les bÃ©nÃ©fices mÃ©taboliques du jeÃ»ne (brÃ»lage graisses).
  
  // PHASE 4 : FÃ‰CULENTS DOUX (riz complet, patate douce)
  // Pourquoi ? C'est la transition finale vers une alimentation "normale".
  // Les fÃ©culents Ã  IG bas rÃ©introduisent les glucides PROGRESSIVEMENT.
  // â¡ï¸ On sort de la cÃ©tose en douceur, sans pic insulinique brutal.
  
  // ğŸ¯ INTÃ‰RÃŠT DU DÃ‰COUPAGE EN 4 PHASES :
  // 1. Ã‰viter le syndrome de renutrition (risque vital)
  // 2. PrÃ©server les bÃ©nÃ©fices du jeÃ»ne le plus longtemps possible
  // 3. RÃ©habituer le corps progressivement (pas de choc digestif)
  // 4. Ancrer les nouveaux comportements alimentaires
  // 5. Maintenir la cÃ©tose partielle durant Phase 1-3 (brÃ»lage graisses continu)
  
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  
  // DÃ©coupage proportionnel en 4 phases (selon durÃ©e reprise)
  const dureePhase1 = Math.ceil(dureeReprise / 4);      // ~25% (liquides)
  const dureePhase2 = Math.ceil(dureeReprise / 4);      // ~25% (fibres douces)
  const dureePhase3 = Math.ceil(dureeReprise / 4);      // ~25% (protÃ©ines + graisses)
  const dureePhase4 = dureeReprise - (dureePhase1 + dureePhase2 + dureePhase3); // Reste (fÃ©culents)
  
  return [
    {
      numero: 1,
      nom: "RÃ©veil digestif ultra doux",
      joursDebut: 1,
      joursFin: dureePhase1,
      objectif: "RÃ©habituer ton systÃ¨me digestif en douceur",
      alimentsTypes: ["Liquides", "Jus filtrÃ©s", "Bouillons clairs"],
      interdits: ["Aucun aliment solide", "Aucun sucre", "Aucun fÃ©culent"],
      messagePhysique: "Ton systÃ¨me digestif est en sommeil depuis X jours...",
      messageSpirituel: "Ce bouillon n'est pas qu'un liquide. C'est une reconnexion Ã  la vie...",
      messageMotivation: "Le plus dur est fait. Tu entres maintenant dans la phase d'ancrage.",
      paroleJour: "Ton corps te remercie pour ce repos. Honore-le avec douceur.",
      citations: [
        { source: "Bible", texte: "Que votre corps soit un temple...", ref: "1 Cor 6:19" }
      ]
    },
    {
      numero: 2,
      nom: "Introduction fibres et minÃ©raux",
      joursDebut: dureePhase1 + 1,
      joursFin: dureePhase1 + dureePhase2,
      objectif: "RÃ©introduire les fibres progressivement",
      alimentsTypes: ["Soupes", "LÃ©gumes cuits", "Poissons blancs"],
      interdits: ["Aucun fÃ©culent", "Aucun sucre", "Aucune graisse ajoutÃ©e"],
      messagePhysique: "Ton intestin se rÃ©veille. Les fibres douces relancent le transit...",
      messageSpirituel: "Chaque lÃ©gume que tu manges est un acte de soin...",
      messageMotivation: "Tu progresses. Ton corps intÃ¨gre la nourriture avec sagesse.",
      paroleJour: "La simplicitÃ© est une force. Ce repas te suffit.",
      citations: [
        { source: "Islam", texte: "Mangez et buvez, mais sans excÃ¨s", ref: "Coran 7:31" }
      ]
    },
    {
      numero: 3,
      nom: "RÃ©intÃ©gration protÃ©ines et graisses douces",
      joursDebut: dureePhase1 + dureePhase2 + 1,
      joursFin: dureePhase1 + dureePhase2 + dureePhase3,
      objectif: "Ajouter protÃ©ines complÃ¨tes et bonnes graisses",
      alimentsTypes: ["Å’ufs", "Avocats", "Huiles vÃ©gÃ©tales", "Yaourts"],
      interdits: ["Aucun fÃ©culent", "Aucun sucre raffinÃ©"],
      messagePhysique: "Ton corps retrouve sa capacitÃ© Ã  mÃ©taboliser des nutriments complexes...",
      messageSpirituel: "Tu tiens parole envers toi-mÃªme. Cette maÃ®trise, c'est ta force...",
      messageMotivation: "Tu es Ã  mi-chemin. Observe ta stabilitÃ© Ã©motionnelle.",
      paroleJour: "Faire ce qu'on dit qu'on va faire, c'est muscler sa volontÃ©.",
      citations: [
        { source: "Conversations avec Dieu", texte: "Ce que tu fais avec intention devient sacrÃ©" }
      ]
    },
    {
      numero: 4,
      nom: "FÃ©culents doux (midi uniquement)",
      joursDebut: dureePhase1 + dureePhase2 + dureePhase3 + 1,
      joursFin: dureeReprise,
      objectif: "RÃ©introduire les fÃ©culents progressivement",
      alimentsTypes: ["Patate douce", "Riz complet", "Flocons d'avoine", "Fruits doux"],
      interdits: ["FÃ©culents le soir", "Sucres raffinÃ©s"],
      messagePhysique: "Tu stabilises ton mÃ©tabolisme. La cÃ©tose diminue, c'est prÃ©vu...",
      messageSpirituel: "Tu as tenu X jours. Tu as prouvÃ© que tu es maÃ®tre de tes choix...",
      messageMotivation: "DerniÃ¨re ligne droite. Chaque jour compte pour l'ancrage.",
      paroleJour: "Ce que tu as accompli n'est pas temporaire. C'est une transformation.",
      citations: [
        { source: "Bible", texte: "L'homme ne vivra pas de pain seulement...", ref: "Mt 4:4" }
      ]
    }
  ];
}

function getAlimentsPhase(phaseNumero, maintienCetose) {
  // Importer depuis /data/alimentsRepriseJeune.js
  const alimentsRepriseJeune = require('../data/alimentsRepriseJeune');
  
  let aliments = alimentsRepriseJeune[`phase_${phaseNumero}`] || [];
  
  // Si option maintienCetose activÃ©e, filtrer aliments qui favorisent cÃ©tose
  if (maintienCetose && phaseNumero <= 3) {
    aliments = aliments.filter(a => a.favoriseCetose !== false);
  }
  
  return aliments;
}
